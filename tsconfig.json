{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "ES2021"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
  ]
}
